{
  "name": "@dicky/dicky",
  "version": "0.0.1-alpha",
  "description": "The dicky package",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./adapters/bun": {
      "types": "./dist/adapters/bun.d.ts",
      "default": "./dist/adapters/bun.js"
    },
    "./adapters/ioredis": {
      "types": "./dist/adapters/ioredis.d.ts",
      "default": "./dist/adapters/ioredis.js"
    }
  },
  "scripts": {
    "dev": "bun --hot --watch",
    "build": "bun run build-ts && bun run bundle-dist",
    "build-ts": "tsc",
    "typecheck": "tsgo --noEmit",
    "bundle-dist": "bun build --target=node dist/index.js --outfile dist/bundle.js",
    "test": "bun test",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "lint:files": "oxlint",
    "format": "oxfmt src",
    "format:check": "oxfmt src --check",
    "format:files": "oxfmt",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "bun": "^1.0.0",
    "@typescript/native-preview": "latest",
    "ioredis": "^5.5.0",
    "nanoid": "^5.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "^1.3.8",
    "oxlint": "latest",
    "oxfmt": "latest",
    "typescript": "^5.0.0"
  }
}
