{
  "name": "dicky-monorepo",
  "version": "1.0.0",
  "description": "A monorepo for dicky packages",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @dicky/dicky dev",
    "build": "bun run --filter @dicky/dicky build",
    "typecheck": "bun run --filter @dicky/dicky typecheck",
    "test": "bun run --filter @dicky/dicky test",
    "lint": "bun run --filter @dicky/dicky lint",
    "lint:fix": "bun run --filter @dicky/dicky lint:fix",
    "format": "bun run --filter @dicky/dicky format",
    "format:check": "bun run --filter @dicky/dicky format:check",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/dicky/src/**/*.{ts,tsx}": [
      "bun run --filter @dicky/dicky lint:files",
      "bun run --filter @dicky/dicky format:files"
    ]
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "oxlint": "^1.43.0",
    "oxfmt": "^0.28.0",
    "typescript": "^5.9.3"
  }
}